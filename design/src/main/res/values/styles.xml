<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="TextAppearance" />

    <style name="TextAppearance.Title">
        <item name="android:textSize">@dimen/design_text_large</item>
        <item name="android:textColor">@color/design_primary_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.SubTitle">
        <item name="android:textSize">@dimen/design_text_small</item>
        <item name="android:textColor">@color/design_gray_darker_color</item>
    </style>

    <style name="TextAppearance.Body">
        <item name="android:textSize">@dimen/design_text_medium</item>
        <item name="android:textColor">@color/design_gray_darker_color</item>
    </style>

    <style name="TextAppearance.Price">
        <item name="android:textSize">@dimen/design_text_medium</item>
        <item name="android:textColor">@color/design_black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Header">
        <item name="android:textSize">@dimen/design_text_medium</item>
        <item name="android:textColor">@color/design_black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DefaultToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:background">@color/design_primary_color</item>
        <item name="android:titleTextColor">@color/design_white</item>
    </style>

    <style name="ButtonAppearance" />

    <style name="ButtonAppearance.Primary">
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">@color/design_white</item>
    </style>

</resources>